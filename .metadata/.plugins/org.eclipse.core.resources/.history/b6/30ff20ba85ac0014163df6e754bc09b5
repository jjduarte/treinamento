package br.com.paripassu.core.dao.impl;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.util.List;

import br.com.paripassu.api.entidades.Pais;
import br.com.paripassu.core.dao.interfaces.PaisDAO;

public class PaisDAOImpl implements PaisDAO {

	public static final String INSERIR_PAIS = "INSERT INTO en_produto VALUES (nextval('enPais_idPais_seq'), ?)";
	public static final String ALTERAR_PAIS = "UPDATE en_pais SET nome = ?  where id_pais = ?";
	public static final String EXCLUIR_PAIS = "DELETE * FROM en_pais WHERE id_pais = ?";
	public static final String LISTAR_PAIS = "SELECT id_pais, nome FROM en_pais";
	
	@Override
	public void inserir(Connection conn, Pais object) throws Exception {
		PreparedStatement ps = null;
        try{
            ps = conn.prepareStatement(INSERIR_PAIS);
            ps.setString(1, object.getNome());
            int result = ps.executeUpdate();
            if(result !=0){
                System.out.println("Fornecedor com id "+object.getIdPais() + "inserido com sucesso!");
            }else 
            	System.out.println("Falha ao inserir Fornecedor com id="+object.getIdPais());
        }catch(SQLException e){
            e.printStackTrace();
        }finally{
            try {
                ps.close();
            } catch (SQLException e) {
                e.printStackTrace();
            }
        }
		
	}

	@Override
	public void alterar(Connection conn, Pais object) throws Exception {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void excluir(Connection conn, Integer id) throws Exception {
		// TODO Auto-generated method stub
		
	}

	@Override
	public List<Pais> listar(Connection conn) throws Exception {
		// TODO Auto-generated method stub
		return null;
	}

}
